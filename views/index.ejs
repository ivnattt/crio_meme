<h1>XMEME BY TANVI</h1>

<div style = "background-color: bisque; border: 5px solid black; margin: 40px; padding: 20px">    
    <form action = "/memes" method = "POST">
        <div class = "form">
            <label for = "name" class = "form" >Name </label>
            <input type="text" name = "name" class = "form">
        </div>
        <div class = "form">
            <label for = "caption" class = "form">Caption </label>
            <input type="text" name = "caption" class = "form">
        </div>
        <div class = "form">
            <label for = "link" class = "form">Link</label>
            <input type="text" name = "link" class = "form">
        </div>

        <button type="submit">SUBMIT</button>
    </form>
</div> 
<div style = "margin-top: 30px">
    <h2>MEMES APPEAR HERE</h2>
    
    <% memes.forEach(meme=>{ %>
        <div style = "border: 1px solid red; margin: 40px; padding: 20px">
            <div style = "margin: 5px"><h3><%= meme.name%></h3></div>
            <div style = "margin: 5px"><h3><%= meme.createdAt%></h3></div>
            <div style = "margin: 5px"><%= meme.caption%></div>
            <div style = "margin: 5px">
            <a href = <%= meme.link%>><img src = <%= meme.link%> height="200" width ="200" ></a>
            <form action = "/<%= meme.id%>?_method=DELETE" method = "POST">
                <button type = "submit">Delete</button>
            </form>
            
            </div>
        </div>
    <% })%>
</div>

<style>
    .form{
        margin: 10px;
        font-size: 30;
        height: 40px;
    }
</style>